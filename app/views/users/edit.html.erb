<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-5 mx-auto">
        <div class="card shadow-sm">
          <div class="card-body p-5">
            <span class="text-muted" data-config-id="caption">Edit</span>
            <h3 class="fw-bold mb-5" data-config-id="form-header">Edit Profile</h3>
            <% if @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= form_with model: @user do |form| %>
              <div class="form-group mb-3">
                <%= form.label :name, class: 'form-label mb-0 ms-1' %>
                <%= form.text_field :name, class: 'form-control mb-3', placeholder: 'Name' %>
              </div>

              <div class="form-group mb-3">
                <%= form.label :email, class: 'form-label mb-0 ms-1' %>
                <%= form.email_field :email, class: 'form-control mb-3', placeholder: 'E-mail Address' %>
              </div>

              <div class="form-group mb-3">
                <%= form.label :password, class: 'form-label mb-0 ms-1' %>
                <%= form.password_field :password, class: 'form-control mb-3', placeholder: 'Password' %>
              </div>

              <div class="form-group mb-3">
                <%= form.label :password_confirmation, class: 'form-label mb-0 ms-1' %>
                <%= form.password_field :password_confirmation, class: 'form-control mb-3', placeholder: 'Password confirmation' %>
              </div>

              <div class="d-flex justify-content-between">
              <%= form.submit 'Update', class: 'btn btn-primary my-3' %>
              <%= link_to 'Cancel', user_path(current_user), class: 'btn btn-outline-primary my-3' %>
              </div>
            <% end %>

            <p class="text-muted">
              <small>
              </small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>