<div class="row flex-column justify-content-center align-content-center" style="margin-top: 10rem">
  <div class="col-md-6">
    <div class="card col-md-10 mx-auto shadow-sm p-3">
      <article class="card-body">
        <h1 class="h4 card-title mb-4">Forgot your password?</h1>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-5">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>
          </div>

          <div class="form-group d-flex justify-content-between mt-3">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
            <%= link_to "Cancel", root_path, class: "btn btn-outline-danger" %>
          </div>
        <% end %>
      </article>
    </div>
  </div>
</div>